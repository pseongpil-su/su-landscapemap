{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "geojson/**", 
          "law.json"
        ]
      }
    }
  ],
  "routes": [
    { "source": "/api/(.*)", "destination": "server.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
